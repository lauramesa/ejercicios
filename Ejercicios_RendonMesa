#PROBLEMAS SECUENCIALES
#1
cap_inv = float (input("¿cuales su capital a invertir?"))
print("NOTA: Después de un mes, si el banco paga a razón de 2% mensual.")
aRazonD = 0.02
ganancia = (cap_inv*aRazonD)
print(f" sus ganancias seran de: {ganancia}")

#2
salary= float(input("ingrese su sueldo base"))
v1= float(input("valor de primera venta"))
v2= float(input("valor de segunda venta"))
v3= float(input("valor de tercera venta"))
t_ventas = (v1+v2+v3)
comision= (t_ventas*0.10)
tpag= salary+comision
print(f"Tu sueldo base mas un 10% por comisiones de sus ventas es de: {tpag}")

#3
t_buy= float(input("valor total de tu compra"))
print("NOTA: descuento del 15% sobre el valor de la compra")
discount = (t_buy*0.15)
t_pay= (t_buy-discount)
print(f"el valor a pagar es de: {t_pay}")

#4
c1= float(input("ingrese primera nota de la calificacion parcial"))
c2= float(input("ingrese segunda nota de la calificacion parcial"))
c3= float(input("ingrese tercera nota de la calificacion parcial"))
prom=(c1+c2+c3)/3
examf= float(input("ingrese calificacion del examen final"))
traf= float(input("ingrese calificacion del examen final"))
ppar = prom*0.55
ef= traf*0.30
tf= traf*0.15
noteAnd= ppar+ef+tf
print(f"tu calificacion final sera de: {noteAnd}")

#5
print("¿cual es el porcentaje de hombres y de mujeres que hay en un grupo?")
man= int(input("ingresa el numero de hombres"))
woman= int(input("ingresa el numero de mujeres"))
tn= man+woman
pm= man*100/tn
pw= woman*100/tn
print(f"el porcentaje de hombres es de: {man} %")
print(f"el porcentaje de mujeres es de: {woman} %")

#6
print("calcular la edad de una persona")
f_nac= int(input("ingresar año de nacimiento  ej:2000 "))
f_act= int(input("ingresar el año actual"))
edad= f_act-f_nac
print(f"aproximadamente tu edad es de: {edad}")

#PROBLEMAS PROPUESTOS
#1
c_pesos= float(input("ingresar la cantidad en pesos"))
u_cam= float(input("ingresar unidad de cambio"))
euro= c_pesos*u_cam
print(f"la equivalencia en dolares es de: {euro}")

#2
number= float(input("ingresar un numero"))
p= number*(1)
n= number*(-1)
if number>=0:
    print(f"el valor absoluto es de: {p} es positivo")
else:
    print(f"el valor absoluto es de: {n} es negativo")

#3
p= float(input("ingresa la presion"))
v= float(input("ingresa el volumen"))
t= float(input("ingresa la temperatura"))
masa=(p*v)/(0.37*(t+460))
print(f"la masa de aire es de: {masa}")

#4
edad= int(input("ingresa tu edad actual"))
n_pul= (220-edad)/10
print(f"por cada 10 segundos de ejercicio, aproximadamente tu numero de pulsasiones debe ser de: {n_pul}")

#5
