#8
day1= float(input("ingresa el tiempo del primer dia"))
day2= float(input("ingresa el tiempo del segundo dia"))
day3= float(input("ingresa el tiempo del tercer dia"))
total_Time= (day1+day2+day3)/3
print(f"El tiempo promedio que la persona tarda en recorrer la ruta es de: {total_Time}")


#9
inver56= float(input("ingrese el valor del contribuyente 0456"))
inver57= float(input("ingrese el valor del contribuyente 0457"))
inver58= float(input("ingrese el valor del contribuyente 0458"))
ttotal_inv= inver56+inver57+inver58
t_inv1= (inver56/ttotal_inv)*100
t_inv2= (inver57/ttotal_inv)*100
t_inv3= (inver58/ttotal_inv)*100
print(f"el contribuyente 0456 el porcentaje de inversion es de: {inver56}")
print(f"el contribuyente 0457 el porcentaje de inversion es de: {inver57}")
print(f"el contribuyente 0458 el porcentaje de inversion es de: {inver58}")

#10
print("ingresar notas para calcular el promedio de las materias")
ex_mate= float(input("ingrese la nota del examen de Matematicas"))
n_mate1= float(input("ingrese las primera nota de Matematicas"))
n_mate2= float(input("ingrese las segunda nota de Matematicas"))
n_mate3= float(input("ingrese las tercera nota de Matematicas"))
prom_exM= ex_mate*0.90
prom_nM= (n_mate1+n_mate2+n_mate3)/3 * 0.10
prom_M= prom_exM+prom_nM

ex_fisi= float(input("ingrese la nota del examen de Fisica"))
n_fisi1= float(input("ingrese las primera nota de Fisica"))
n_fisi2= float(input("ingrese las segunda nota de Fisica"))
prom_exF= ex_fisi*0.80
prom_nF= (n_fisi1+n_fisi2)/2 * 0.20
prom_F= prom_exF+prom_nF

ex_kimi= float(input("ingrese la nota del examen de Quimica"))
n_kimi1= float(input("ingrese las primera nota de Matematicas"))
n_kimi2= float(input("ingrese las segunda nota de Matematicas"))
n_kimi3= float(input("ingrese las tercera nota de Matematicas"))
prom_exQ= ex_kimi*0.85
prom_nQ= (n_kimi1+n_kimi2+n_kimi3)/3 * 0.15
prom_Q= prom_exQ+prom_exQ

print(f"el promedio de las notas de Matematicas es de: {prom_M}")
print(f"el promedio de las notas de Fisica es de: {prom_F}")
print(f"el promedio de las notas de Quimica es de: {prom_Q}")


